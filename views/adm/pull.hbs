<a href="/profile"> <button>My profile</button></a>

<h5>ADD NEW COMMIT</h5>
<form action="/adm/commit" method="post">
  <input name='owner' value='{{user._id}}' type='hidden'>

  <input type='radio' name='category' value='yes' checked>Yes, she can!
  <input type='radio' name='category' value='bits'> Inspiration Bits
  {{!-- <input type='radio' name='category' value='linking'> Linking Women --}}

  <div id="link-info" hidden>
    <label for="">Title:</label>
    <input type="text" name="title">

    <label for="">Data</label>
    <input type="date" name="date">
    <label for="">Endere√ßo:</label>
    <input type="text" name="address">

    <label>Coordinates</label>
    <input type="text" name="latitude" placeholder="latitude">
    <input type="text" name="longitude" placeholder="longitude">
  </div>

  <label for="">url:</label>
  <input type="text" name="url">

  <label for="">Description:</label>
  <input type="text" name="description">

  <button type="submit">ADD</button>
</form>

<br>
<hr>

<h5>PENDING</h5>
{{#each arrCommit}}
{{#unless this.post}}
<div>
  <p>  {{this.owner.username}} | {{this.url}} | {{this.description}} | {{this.category}} </p>
</div>
<form action="/adm/{{this.id}}/delete" method="post">
  <button type="submit">delete</button>
</form>
<a href="/adm/{{this.id}}/edit">
  <button type="submit">edit</button>
</a>
<a href="/adm/{{this.id}}/post">
  <button type="submit">post</button>
</a>
{{/unless}}
{{/each}}

